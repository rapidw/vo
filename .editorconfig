root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{cmd,bat}]
end_of_line = crlf

[Jenkinsfile]
indent_size = 2
tab_width = 2

[/deploy/**]
indent_size = 2
tab_width = 2

[*.java]
max_line_length = 120

[Dockerfile]
max_line_length = off
ij_wrap_on_typing = false

[*.gdsl]
max_line_length = off
ij_wrap_on_typing = false